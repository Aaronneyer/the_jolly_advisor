.review.row
  .col-md-10
    %strong
      Professor:
      = review.professor.try(:name)
    = review.body
  .helpfulness.col-md-2
    = link_to upvote_review_path(review), remote: true, method: :put, class: 'upvote' do
      %span.glyphicon.glyphicon-chevron-up
    %span.helpfulness= review.helpfulness
    = link_to downvote_review_path(review), remote: true, method: :put, class: 'downvote' do
      %span.glyphicon.glyphicon-chevron-down
%hr
